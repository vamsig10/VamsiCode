                <HierarchicalDataTemplate x:Name="Hdt" ItemsSource="{Binding Children}" DataType="{x:Type local:UserDetails}" >
                    
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding UserId, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Fname}"></TextBlock>
                        <TextBlock Text="{Binding Lname}"></TextBlock>
                        <TextBlock Text="{Binding PhoneNo}"></TextBlock>
                    </StackPanel>
