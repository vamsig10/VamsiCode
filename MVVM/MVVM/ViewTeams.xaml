<Window x:Class="MVVM.ViewTeams"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        xmlns:controls="clr-namespace:MVVM"
        xmlns:cc="clr-namespace:MVVM"

        mc:Ignorable="d"
        Title="ViewTeams" Height="300" Width="300">
    <Grid>
        <Label Content="Select Team" HorizontalAlignment="Left" Margin="35,37,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Combobox_Teams" HorizontalAlignment="Left" Margin="129,41,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <controls:UserControlDemo Visibility="Visible"  Margin="15,25,-15,-25" Loaded="UserControlDemo_Loaded" />
        <cc:CustomControlDemo x:Name="ControlDemoButton" Content="CustomControlDemo" HorizontalAlignment="Left" Margin="89,222,0,0" VerticalAlignment="Top" Click="CustomControlDemo_Click_1"/>

    </Grid>
</Window>

